PORT=4000

# Local development database (override with DATABASE_URL in production/Railway)
DATABASE_URL=mysql://root:password@localhost:3306/efootball

# JWT secret used to sign access tokens (change in production)
JWT_SECRET=change-me-in-production

# Optional: password used by db/seed.js when seeding locally (Railway can override)
SEED_SUPER_ADMIN_PASSWORD=SuperAdmin123!

# Node environment (Railway: set to production)
NODE_ENV=development

# Optional: CORS origin for production (e.g. https://your-frontend-domain)
# CORS_ORIGIN=https://your-frontend-domain
